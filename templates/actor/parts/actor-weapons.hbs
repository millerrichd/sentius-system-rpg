<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>Weapon</div>
    <div class="item-range">Range</div>
    <div class="item-capacity">Cap</div>
    <div class="item-rateoffire">ROF</div>
    <div class="item-armorpiercing">AP</div>
    <div class="item-damagetype">Type</div>
    <div class='item-formula'>Roll Formula</div>
    <div class='item-minstrength'>Min.Strength</div>
    <div class='item-controls'></div>
  </li>
  {{#each items as |item id|}}
    {{#if (eq item.type 'weapon')}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-range item-prop'>{{item.system.weapon.rangeIncrement}}</div>
      <div class='item-capacity item-prop'>{{item.system.weapon.capacity}}</div>
      <div class='item-rateoffire item-prop'>{{item.system.weapon.rateOfFire}}</div>
      <div class='item-armorpiercing item-prop'>{{item.system.weapon.armorPiercing}}</div>
      <div class='item-damagetype item-prop'>{{item.system.weapon.damageType}}</div>
      <div class='item-formula item-prop'>{{item.system.formula}}</div>
      <div class='item-minstrength item-prop'>{{item.system.weapon.minStrengthBonus}}</div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Update" type='Item'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='Item'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
    {{/if}}
  {{/each}}
</ol>
